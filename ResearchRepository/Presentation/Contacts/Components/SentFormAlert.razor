@page "/success/{IdGroup:int}"
@inject NavigationManager NavManager
@inject IMenuState menuState

<MudPaper Class="d-flex align-center" Style="height:100vh;" Elevation="0">
    <MudGrid>
        <MudItem xs="12" Class="d-flex justify-center">
            <img src="./img/Yes_Check_Circle.svg" />
        </MudItem>
        <MudItem xs="12">
            <MudText Align="Align.Center" Typo="Typo.h6">Su mensaje ha sido enviado</MudText>
            <MudText Align="Align.Center" Typo="Typo.subtitle2">En 5 segundos se le redireccionará de vuelta al apartado de contacto</MudText>
        </MudItem>
    </MudGrid>
</MudPaper>

@code {
    [Parameter]
    public int IdGroup { get; set; }

    protected override async Task OnInitializedAsync()
    {
        menuState.SetDisplayGroupMenu(true, IdGroup);
        await Task.Delay(5000);
        NavManager.NavigateTo("contacto/"+IdGroup);
    }
}
