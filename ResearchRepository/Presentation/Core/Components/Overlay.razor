
<!--
    This component allows to display a overlay or modal (if you are familiar with Bootstrap). 
    The parameter IsOpen allows to display or hide this component.

    Note: If a component or html tag doesn't display correctly check the z-index value (css)

    Created by: Tyron Fonseca (MonkeyMadness)
-->

<MudOverlay Visible="IsOpen" DarkBackground="true" Absolute="false" ZIndex="1200">
    <MudPaper Class="d-flex flex-column align-center pa-10" Style="max-width: 80vw; height: auto; overflow: auto; max-height: 95vh; ">
       @ChildContent
    </MudPaper>
</MudOverlay>
@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    [Parameter]
    public bool IsOpen { get; set; }
}
