<MudCard Elevation="0">
    <MudCardHeader Class="banner" Style="background: url('../img/bg-pattern.png'), linear-gradient(to left, #005DA4, #41ade7); padding: 10px; ">
        <CardHeaderContent>
            <MudText Typo="Typo.h6">
                @Title
            </MudText>
            <MudText Typo="Typo.body2">
                @Description
            </MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        @ChildContent
    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string Description { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
